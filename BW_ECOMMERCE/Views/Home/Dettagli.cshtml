@model BW_ECOMMERCE.Models.Prodotto

@{
    ViewData["Title"] = "Dettagli Prodotto";
}

<h1>Dettagli Prodotto</h1>

<div>
    <h4>Prodotto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdProdotto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdProdotto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProdotto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeProdotto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prezzo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezzo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescBreve)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescBreve)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descrizione)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descrizione)
        </dd>
        <dt class="col-sm-2">
            Immagine
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImgProdotto))
            {
                <img src="data:image;base64,@Model.ImgProdotto" class="img-fluid rounded" style="max-width: 400px; max-height: 400px;" />
            }
            else
            {
                <span>Nessuna immagine disponibile</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataIns)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataIns)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodProd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodProd)
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Modifica", "Edit", new { id = Model.IdProdotto }) |
    @Html.ActionLink("Torna alla lista", "Index")
</div>
