@model BW_ECOMMERCE.Models.Prodotto

@{
    ViewData["Title"] = "Modifica Prodotto";
}

<h2 class="text-center my-4">Modifica Prodotto</h2>

<div class="container my-form">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Modifica" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="NomeProdotto" class="control-label"></label>
                            <input asp-for="NomeProdotto" class="form-control" />
                            <span asp-validation-for="NomeProdotto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DescBreve" class="control-label"></label>
                            <input asp-for="DescBreve" class="form-control" />
                            <span asp-validation-for="DescBreve" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descrizione" class="control-label"></label>
                            <textarea asp-for="Descrizione" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Descrizione" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Prezzo" class="control-label"></label>
                            <input asp-for="Prezzo" class="form-control" />
                            <span asp-validation-for="Prezzo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Immagine Prodotto</label>
                            <input type="file" name="file" class="form-control-file" />
                            <img src="data:image/png;base64,@Model.ImgProdotto" alt="Product Image" class="img-thumbnail mt-2" style="max-height: 200px;" />
                            <span asp-validation-for="ImgProdotto" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="IdProdotto" />
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary myBtn">Salva</button>
                            <a asp-action="Index" class="btn btn-secondary myBtn">Annulla</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Color Palette */
    :root {
        --primary-color: #4CAF50; /* Green */
        --primary-hover-color: #45A049; /* Darker Green */
        --secondary-color: #f8f9fa; /* Light Gray */
        --secondary-hover-color: #e2e6ea; /* Darker Light Gray */
        --bg-color: #ffffff; /* White Background */
        --border-color: #ced4da; /* Light Border */
        --focus-border-color: #4CAF50; /* Green Focus Border */
        --focus-shadow-color: rgba(76, 175, 80, 0.25); /* Green Focus Shadow */
        --text-color: #333; /* Dark Text */
        --danger-color: #dc3545; /* Red */
        --card-shadow-color: rgba(76, 175, 80, 0.15); /* Green Shadow */
        --form-shadow-color: rgba(76, 175, 80, 0.25); /* Darker Green Shadow */
    }

    .text-center {
        text-align: center;
    }

    .my-form {
        margin-top: 4rem;
        background-color: var(--bg-color);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 12px var(--form-shadow-color);
    }

    .card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 8px var(--card-shadow-color);
    }

    .card-body {
        padding: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control, .form-control-file {
        border-radius: 0.25rem;
        padding: 0.75rem;
        border: 1px solid var(--border-color);
    }

        .form-control:focus {
            border-color: var(--focus-border-color);
            outline: 0;
            box-shadow: 0 0 0 0.2rem var(--focus-shadow-color);
        }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
    }

        .btn-primary:hover {
            background-color: var(--primary-hover-color);
            border-color: var(--primary-hover-color);
        }

    .btn-secondary {
        background-color: var(--secondary-color);
        border-color: var(--border-color);
        color: var(--text-color);
    }

        .btn-secondary:hover {
            background-color: var(--secondary-hover-color);
            border-color: var(--border-color);
        }

    .myBtn {
        padding: 0.75rem 1.25rem;
        font-size: 1rem;
        border-radius: 0.25rem;
        transition: background-color 0.3s, box-shadow 0.3s;
    }

        .myBtn:hover {
            box-shadow: 0 4px 12px var(--form-shadow-color);
        }

    h2 {
        font-size: 2.5rem;
        color: var(--text-color);
    }

    label {
        font-weight: bold;
        color: var(--text-color);
    }

    .text-danger {
        color: var(--danger-color);
    }

    .container {
        background-color: var(--bg-color);
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 8px var(--card-shadow-color);
    }

    .img-thumbnail {
        max-height: 200px;
        border-radius: 0.25rem;
        margin-top: 1rem;
    }
</style>